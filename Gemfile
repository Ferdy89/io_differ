source 'https://rubygems.org' do

  # Test framework
  gem 'rspec',   '~> 3.4'

  # Mocks HTTP calls, specially useful for testing
  gem 'webmock', '~> 1.24'

  # Records and replays HTTP interactions for tests
  gem 'vcr',     '~> 3.0'

  # Mocks the Time methods for testing
  gem 'timecop', '~> 0.8'
end
